    "tag": "section",
    "settings": [
      {
      "type": "richtext",
      "id": "title",
      "label": "Title"
      },
      {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
      },
      {
      "type": "text",
      "id": "bottom_text",
      "label": "Bottom Text"
      },
      {
      "type": "text",
      "id": "info_subtitle",
      "label": "Info Block Subtitle"
      },
      {
      "type": "text",
      "id": "info_title",
      "label": "Info Block Title"
      },
      {
      "type": "image_picker",
      "id": "info_image",
      "label": "Info Block Image"
      },
      {
      "type": "text",
      "id": "info_content_title",
      "label": "Info Block Title"
      },
      {
      "type": "text",
      "id": "info_content_text",
      "label": "Info Block Text"
      },
      {
      "type": "text",
      "id": "info_author",
      "label": "Info Block Author"
      }
    ],
    "blocks": [
      {
      "name": "Items list",
      "type": "text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Item Title"
          },
          {
          "type": "text",
          "id": "text",
          "label": "Item Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Landing List"
      }
    ]
}
{% endschema %}