<div class="landing-list">
  <div class="container">
    <h2 class="h2 h2--uppercase"><span class="url-name"></span>{{ section.settings.title }}</h2>
    <ol class="list-unstyled">
      {%- for block in section.blocks -%}
        <li>
          <h3>{{ block.settings.title }}</h3>
          <p class="text">{{ block.settings.text }}</p>
        </li>
      {%- endfor -%}
    </ol>
    <p class="subtitle">{{ section.settings.subtitle }}</p>
    <p class="landing-list__text">{{ section.settings.bottom_text }}</p>
  </div>
</div>

<div class="landing-info">
  <svg class="landing-info__bg1" width="1437" height="277" viewBox="0 0 1437 277" preserveAspectRatio="none" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M920.642 0C1141.41 0 1317.14 39.2215 1437 90.829L1437 277L-4 277V65.645C424.297 110.651 644.675 0 920.642 0Z" fill="#F2E9E0"/>
  </svg>
  <div class="landing-info__wrapper position-relative">
    <div class="container container--landing position-relative">
      <p class="landing-info__subtitle">{{ section.settings.info_subtitle }}</p>
      <h2 class="h2">{{ section.settings.info_title }}</h2>
      <div class="landing-info__content">
        <div class="landing-info__img">
          <img
            srcset="{%- if section.settings.info_image.width >= 375 -%}{{ section.settings.info_image | image_url: width: 375 }} 375w,{%- endif -%}
              {%- if section.settings.info_image.width >= 550 -%}{{ section.settings.info_image | image_url: width: 550 }} 550w,{%- endif -%}
              {%- if section.settings.info_image.width >= 750 -%}{{ section.settings.info_image | image_url: width: 750 }} 750w,{%- endif -%}
              {%- if section.settings.info_image.width >= 1100 -%}{{ section.settings.info_image | image_url: width: 1100 }} 1100w,{%- endif -%}
              {%- if section.settings.info_image.width >= 1500 -%}{{ section.settings.info_image | image_url: width: 1500 }} 1500w,{%- endif -%}
              {%- if section.settings.info_image.width >= 1780 -%}{{ section.settings.info_image | image_url: width: 1780 }} 1780w,{%- endif -%}
              {%- if section.settings.info_image.width >= 2000 -%}{{ section.settings.info_image | image_url: width: 2000 }} 2000w,{%- endif -%}
              {%- if section.settings.info_image.width >= 3000 -%}{{ section.settings.info_image | image_url: width: 3000 }} 3000w,{%- endif -%}
              {%- if section.settings.info_image.width >= 3840 -%}{{ section.settings.info_image | image_url: width: 3840 }} 3840w,{%- endif -%}
              {{ section.settings.info_image | image_url }} {{ section.settings.info_image.width }}w"
            sizes=" (min-width: 750px) 50vw, 100vw"
            src="{{ section.settings.info_image | image_url: width: 1500 }}"
            loading="lazy"
            alt="{{ section.settings.info_image.alt | escape }}"
            width="{{ section.settings.info_image.width }}"
            height="{{ section.settings.info_image.width | divided_by: section.settings.info_image.aspect_ratio }}"
          >
        </div>
        <div class="landing-info__review">          
          <h3>{{ section.settings.info_content_title }}</h3>
          <p>{{ section.settings.info_content_text }}</p>
          <span>{{ section.settings.info_author }}</span>
        </div>
      </div>
    </div>
  </div>

  <svg class="landing-info__bg2" width="1436" height="277" viewBox="0 0 1436 277" preserveAspectRatio="none" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M511.358 277C290.585 277 114.865 237.778 -4.99931 186.171L-5 0L1436 9.15527e-05V211.355C1007.7 166.349 787.325 277 511.358 277Z" fill="#F2E9E0"/>
  </svg>   
    
</div>

