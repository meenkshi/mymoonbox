<div class="quiz-banner">
  <div class="quiz-banner__wrapper position-relative" style="background-color:{{ section.settings.sec_bg_clr }};">
    <div class="container">
      <div class="quiz-banner__inner d-flex flex-wrap justify-content-between align-items-center position-relative">
        <div class="quiz-banner__item">
          {% if section.settings.title != blank %}
          <h1 class="quiz-banner__title" style="color:{{ section.settings.clr_text }}"> {{ section.settings.title }}
          </h1>
          {% endif %}
          <div class="quiz-banner__image tablet d-none d-md-block d-lg-none w-100">
            {%- assign image = section.settings.image_tablet -%}
            <img srcset="{%- if image.width >= 165 -%}{{ image | img_url: '165x' }} 165w,{%- endif -%}
            {%- if image.width >= 330 -%}{{ image | img_url: '330x' }} 330w,{%- endif -%}
            {%- if image.width >= 535 -%}{{ image | img_url: '535x' }} 535w,{%- endif -%}
                {%- if image.width >= 750 -%}{{ image | img_url: '750x' }} 750w,{%- endif -%}
                {%- if image.width >= 1000 -%}{{ image | img_url: '1000x' }} 1000w,{%- endif -%}
                {%- if image.width >= 1500 -%}{{ image | img_url: '1500x' }} 1500w,{%- endif -%}
                {%- if image.width >= 3000 -%}{{ image | img_url: '3000x' }} 3000w,{%- endif -%}
                {{ image | img_url: 'master' }} {{ image.width }}w" src="{{ image | img_url: '1500x' }}"
              alt="{{ image.alt | escape }}" loading="lazy" class="w-100">
          </div>
          <div class="quiz-banner__image mobile d-block d-md-none w-100">
            {%- assign image = section.settings.image_mobile -%}
            <img srcset="{%- if image.width >= 165 -%}{{ image | img_url: '165x' }} 165w,{%- endif -%}
            {%- if image.width >= 330 -%}{{ image | img_url: '330x' }} 330w,{%- endif -%}
            {%- if image.width >= 535 -%}{{ image | img_url: '535x' }} 535w,{%- endif -%}
                {%- if image.width >= 750 -%}{{ image | img_url: '750x' }} 750w,{%- endif -%}
                {%- if image.width >= 1000 -%}{{ image | img_url: '1000x' }} 1000w,{%- endif -%}
                {%- if image.width >= 1500 -%}{{ image | img_url: '1500x' }} 1500w,{%- endif -%}
                {%- if image.width >= 3000 -%}{{ image | img_url: '3000x' }} 3000w,{%- endif -%}
                {{ image | img_url: 'master' }} {{ image.width }}w" src="{{ image | img_url: '1500x' }}"
              alt="{{ image.alt | escape }}" loading="lazy" class="w-100">
          </div>
          <div class="quiz-banner__box w-100 d-block d-md-flex d-lg-block justify-content-between">
            {% if section.settings.desc != blank %}
            <div class="quiz-banner__text" style="color:{{ section.settings.clr_text }}"> {{ section.settings.desc }}
            </div>
            {% endif %}
            {% if section.settings.button != blank or section.settings.button-link != blank %}
            <a href=" {{ section.settings.button-link }} " class="quiz-banner__button button__primary"> {{
              section.settings.button }} </a>
            {% endif %}
          </div>
        </div>
        <div class="quiz-banner__image d-none d-lg-block">
          {%- assign image = section.settings.image -%}
          <img srcset="{%- if image.width >= 165 -%}{{ image | img_url: '165x' }} 165w,{%- endif -%}
          {%- if image.width >= 330 -%}{{ image | img_url: '330x' }} 330w,{%- endif -%}
          {%- if image.width >= 535 -%}{{ image | img_url: '535x' }} 535w,{%- endif -%}
              {%- if image.width >= 750 -%}{{ image | img_url: '750x' }} 750w,{%- endif -%}
              {%- if image.width >= 1000 -%}{{ image | img_url: '1000x' }} 1000w,{%- endif -%}
              {%- if image.width >= 1500 -%}{{ image | img_url: '1500x' }} 1500w,{%- endif -%}
              {%- if image.width >= 3000 -%}{{ image | img_url: '3000x' }} 3000w,{%- endif -%}
              {{ image | img_url: 'master' }} {{ image.width }}w" src="{{ image | img_url: '1500x' }}"
            alt="{{ image.alt | escape }}" loading="lazy" class="w-100">
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
"name": "Banner",
"settings": [
{
"type": "color",
"id": "sec_bg_clr",
"label": "Background color",
"default": "#F0DFD5"
},
{
"type": "color",
"id": "clr_text",
"label": "Text",
"default": "#333"
},
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "image_picker",
"id": "image_tablet",
"label": "Image on tablet"
},
{
"type": "image_picker",
"id": "image_mobile",
"label": "Image on mobile"
},
{
"type": "text",
"id": "title",
"label": "Title"
},
{
"type": "richtext",
"id": "desc",
"label": "Text"
},
{
"type": "text",
"id": "button",
"label": "Button"
},
{
"type": "url",
"id": "button-link",
"label": "Button url"
}
]
}
{% endschema %}