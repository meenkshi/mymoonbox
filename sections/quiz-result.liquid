<link rel="stylesheet" data-href="https://cdn.jsdelivr.net/gh/englishextra/iframe-lightbox@latest/css/iframe-lightbox.min.css">

<div class="quiz-result">
  <div class="quiz-result__wrapper" style="background-color: {{ section.settings.sec_bg_clr }};">
    <div class="container">
      <div class="quiz-result__top">
        <div class="quiz-result__content">
          {% if section.settings.subtitle != blank %}
          <div class="quiz-result__subtitle" style="color:{{ section.settings.clr_text }}">
            {{ section.settings.subtitle }} </div>
          {% endif %}
          {% if section.settings.title %}
          <h1 class="quiz-result__title" style="color:{{ section.settings.clr_text }}"> {{ section.settings.title }}
          </h1>
          {% endif %}
          {% if page.content != blank %}
          <div class="quiz-result__description" style="color:{{ section.settings.clr_text }}"> {{ page.content }}
          </div>
          {% endif %}
        </div>
        {% if page.metafields.quiz_video.url != blank %}
        <div class="quiz-result__video">
          <a class="iframe-lightbox-link position-relative" data-padding-bottom="56.25%"
            href="{{ page.metafields.quiz_video.url }}" aria-hidden="true" rel="lightbox">
            <div class="button__play_wrapper">
              <div class="button__play">play</div>
            </div>
            {%- for image in page.metafields.quiz_video.image -%}
            {% if image.src != blank %}
            <figure>
              <img src="{{ image.src }}" alt="{{ image.alt }}" class="w-100" loading="lazy" />
            </figure>
            {% endif %}
            {% endfor %}
          </a>
        </div>
        {% endif %}
      </div>
      <div class="quiz-result__bottom">
        <div class="quiz-result__item d-flex justify-content-center align-items-center flex-column">
          {% if page.metafields.quiz_rezult.subtitle != blank %}
          <div class="quiz-result__item_subtitle" style="color:{{ section.settings.clr_text }}">
            {{ page.metafields.quiz_rezult.subtitle }} </div>
          {% endif %}
          {%- for image in page.metafields.quiz_rezult.image -%}
          {% if image.src != blank %}
          <div class="quiz-result__item_image position-relative w-100">
            <figure>
              <img src="{{ image.src }}" alt="{{ image.alt }}" class="w-100" loading="lazy" />
            </figure>
            {% if page.metafields.quiz_rezult.title != blank %}
            <div class="quiz-result__item_title"> {{ page.metafields.quiz_rezult.title }} </div>
            {% endif %}
          </div>
          {% endif %}
          {% endfor %}
          {% if page.metafields.quiz_rezult.text != blank %}
          <div class="quiz-result__item_text" style="color:{{ section.settings.clr_text }}">
            {{ page.metafields.quiz_rezult.text }} </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .iframe-lightbox-link {
    width: 100%;
  }

  .iframe-lightbox.is-showing.is-opened {
    background-color: rgba(0, 0, 0, 0.75);
  }

  .iframe-lightbox iframe {
    width: 90%;
    height: 90%;
    margin: 0 auto;
  }

  @media (max-width: 989px) {
    .iframe-lightbox iframe {
      width: 100%;
      height: 100%;
      margin: 0 auto;
    }
  }
</style>

<script type="lazyload2" data-src="https://cdn.jsdelivr.net/gh/englishextra/iframe-lightbox@latest/js/iframe-lightbox.min.js"></script>

<script type="lazyload2">
  [].forEach.call(document.getElementsByClassName("iframe-lightbox-link"), function (el) {
    el.lightbox = new IframeLightbox(el, {
    });
  });
</script>

{% schema %}
{
"name": "Quiz result content",
"settings": [
{
"type": "color",
"id": "sec_bg_clr",
"label": "Background color",
"default": "#f3f2ec"
},
{
"type": "color",
"id": "clr_text",
"label": "Text color",
"default": "#333"
},
{
"type": "header",
"content": "Top"
},
{
"type": "text",
"id": "subtitle",
"label": "Subtitle"
},
{
"type": "text",
"id": "title",
"label": "Title"
},
{
"type": "image_picker",
"id": "image-plug",
"label": "Image for video on desktop & tablet"
},
{
"type": "image_picker",
"id": "image-plug-mobile",
"label": "Image for video on mobile"
},
{
"type": "url",
"id": "video_link",
"label": "Video url"
},
{
"type": "header",
"content": "Bottom"
}
]
}
{% endschema %}