<div class="landing-hero position-relative">
  <div class="landing-hero__bg position-absolute" style="background-image: url('{{ section.settings.image_bg | img_url: 'master' }}') ;">
    <div class="landing-hero__svg position-absolute">{{ page.metafields.quiz-result-new.svg }}
    </div>
  </div>
  <div class="container container--landing">
    <div class="landing-hero__content position-relative">
      <p class="landing-hero__subtitle">{{ page.metafields.quiz-result-new.subtitle }}
      </p>
      <p class="landing-hero__title">
        <span class="url-name"></span>
        <span>{{ page.metafields.quiz-result-new.title }}
        </span>
      </p>

      <div class="landing-hero__media position-relative">
        {% comment %}
          <div class="landing-hero__text position-absolute">{{ page.metafields.quiz-result-new.text_svg }}</div>
        {% endcomment %}
        {% comment %}
          <h2 class="position-absolute">{{ page.metafields.quiz-result-new.heading }}</h2>
        {% endcomment %}
        {%- for image in page.metafields.quiz-result-new.image -%}
          <img src="{{ image.src }}" alt="{{ image.alt }}" loading="lazy"/>
        {% endfor %}
      </div>
    </div>
    <div class="landing-hero__info">
      <div class="h2">{{ page.metafields.quiz-result-new.question }}
      </div>
      <div class="text poppins fw-500">{{ page.metafields.quiz-result-new.description }}
      </div>
    </div>
  </div>
</div>
<div class="landing-diagram">
    <div class="container container--landing">
        <div class="landing-diagram__content">
          <div class="landing-diagram__title">
            <p class="subtitle">{{ section.settings.subtitle_2 }}
            </p>
            <h2 class="h2">{{ section.settings.title_2 }}
            </h2>
          </div>
          <ul class="list-unstyled">
            {%- for block in section.blocks -%}
              <li>
                <p>{{ block.settings.text }}
                </p>
                <div class="landing-diagram__bar">
                  <div class="landing-diagram__bg-wrapper">
                    <input class="visually-hidden" type="text" value="{{ block.settings.score }}">
                    <div class="landing-diagram__bg"></div>
                  </div>
                </div>
              </li>
            {%- endfor -%}
          </ul>
        </div>     
  </div>
</div>

{% schema %}
  {
    "name": "Quiz Landing Hero",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image_bg",
        "label": "Background Image"
      }, {
        "type": "text",
        "id": "subtitle_2",
        "label": "Subtitle 2"
      }, {
        "type": "text",
        "id": "title_2",
        "label": "Title 2"
      }
    ],
    "blocks": [
      {
        "name": "Items list",
        "type": "text",
        "settings": [
          {
            "type": "range",
            "id": "score",
            "min": 1,
            "max": 100,
            "step": 1,
            "label": "Score",
            "default": 1
          }, {
            "type": "text",
            "id": "text",
            "label": "Item"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Landing Hero"
      }
    ]
  }
{% endschema %}
