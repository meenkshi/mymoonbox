    "name": "Landing Timer",
    "tag": "section",
    "settings": [
      {
      "type": "product",
      "id": "product",
      "label": "Product"
      },
      {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "LIMITED TIME OFFER"
      }, 
      {
